<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivAdImage"
        android:layout_width="110dp"
        android:layout_height="161dp" />

    <View
        android:id="@+id/viewPosterFilter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/movie_poster_foreground_default"
        app:layout_constraintBottom_toBottomOf="@+id/ivAdImage"
        app:layout_constraintEnd_toEndOf="@+id/ivAdImage"
        app:layout_constraintStart_toStartOf="@+id/ivAdImage"
        app:layout_constraintTop_toTopOf="@+id/ivAdImage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAdText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:minLines="3"
        android:textColor="@color/movie_poster_name"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivAdImage"
        app:layout_constraintStart_toStartOf="@+id/ivAdImage"
        tools:text="Mortal Engines" />

</androidx.constraintlayout.widget.ConstraintLayout>